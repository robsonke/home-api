{
  "name": "home-automation-api",
  "version": "0.1.0",
  "description": "",
  "scripts": {
    "clean": "rimraf build2",
    "prebuild": "npm run clean",
    "build": "tsc",
    "prestart": "npm run build",
    "start": "node -r dotenv/config ./build/app/app.js dotenv_config_path=dev.env",
    "gen-swagger": "microdocs export -f swagger -c $PWD/tsconfig.json --no-cache --definitionFile build/microdocs.json --outputFile build/app/swagger.json -t '/**/*-controller.ts,!/node_modules/**'",
    "predev": "npm run clean",
    "dev": "concurrently \"npm run tsc-watch\" \"npm run nodemon\"",
    "prenodemon": "wait-on ./build/app/app.js",
    "nodemon": "nodemon -r dotenv/config --delay 1500ms --watch dev.env --watch ./build \"./build/app/app.js\" dotenv_config_path=dev.env",
    "tsc-watch": "tsc -w",
    "lint": "tslint -c tslint.json \"./src/**/*.ts\""
  },
  "keywords": [],
  "author": "Rob Sonke",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.17.1",
    "core-js": "2.4.1",
    "cors": "^2.8.4",
    "debug": "^2.6.6",
    "dotenv": "^4.0.0",
    "express": "^4.15.2",
    "express-basic-auth": "^1.1.3",
    "morgan": "^1.8.1",
    "mqtt": "^2.11.0",
    "node-red": "^0.17.5",
    "request": "^2.81.0",
    "request-promise": "^4.2.1",
    "serialize-error": "2.1.0",
    "swagger-ui-express": "^2.0.9",
    "urijs": "^1.18.10",
    "winston": "2.2.0"
  },
  "devDependencies": {
    "@maxxton/microdocs-cli": "1.9.0",
    "@types/body-parser": "1.16.3",
    "@types/debug": "0.0.29",
    "@types/express": "^4.0.35",
    "@types/morgan": "^1.7.32",
    "@types/mqtt": "0.0.34",
    "@types/node": "^7.0.18",
    "@types/request": "^2.0.7",
    "@types/request-promise": "^4.1.39",
    "@types/urijs": "^1.15.32",
    "concurrently": "3.4.0",
    "dotenv": "4.0.0",
    "nodemon": "^1.11.0",
    "rimraf": "^2.5.4",
    "tslint": "3.15.1",
    "typescript": "^2.3.2",
    "typings": "^2.1.1",
    "wait-on": "1.5.3"
  }
}
